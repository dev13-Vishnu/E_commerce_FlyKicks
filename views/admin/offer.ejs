 <!-- SweetAlert2 JS -->
 <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

 <script>
     let selectedOfferId = null;

     // Load products when the modal is shown
     $('#applyOfferModal').on('show.bs.modal', function (event) {
         let button = $(event.relatedTarget);
         selectedOfferId = button.data('offer-id');
         loadProducts();
     });

     function loadProducts() {
         $.ajax({
             url: '/admin/offers/products', // Change this to the correct route to get the products
             type: 'GET',
             success: function (products) {
                 let productHTML = '';
                 products.forEach(product => {
                     productHTML += `
                         <div class="col-md-4 mb-4">
                             <div class="card card-product-grid">
                                 <a href="#" class="img-wrap">
                                     <img src="/${product.image[0].replace(/\\/g, '/')}" alt="Product">
                                 </a>
                                 <div class="info-wrap">
                                     <a href="products/edit?productId=${product._id}" class="title">${product.name}</a>
                                     <div class="price mt-1">₹${product.price}</div>
                                     <div class="d-flex px-5 justify-content-between mt-2">
                                         ${product.offer ? 
                                             `<a class="btn btn-sm btn-danger rounded" onclick="removeOffer('${product._id}')">Remove Offer</a>` :
                                             `<a class="btn btn-sm btn-brand rounded" onclick="applyOffer('${product._id}')">Apply Offer</a>`}
                                     </div>
                                 </div>
                             </div> <!-- card-product end// -->
                         </div> <!-- col end// -->
                     `;
                 });
                 $('#product-list').html(productHTML);
             },
             error: function (error) {
                 console.error("Error loading products:", error);
             }
         });
     }

     function applyOffer(productId) {
         $.ajax({
             url: '/admin/offers/products/apply',
             type: 'POST',
             data: { productId: productId, offerId: selectedOfferId },
             success: function (response) {
                 Swal.fire({
                     title: 'Success!',
                     text: 'Offer applied successfully!',
                     icon: 'success',
                     confirmButtonText: 'OK'
                 }).then(() => {
                     loadProducts(); // Reload products to update the button states
                 });
             },
             error: function (error) {
                 console.error("Error applying offer:", error);
             }
         });
     }

     function removeOffer(productId) {
         $.ajax({
             url: '/admin/offers/products/remove',
             type: 'POST',
             data: { productId: productId },
             success: function (response) {
                 Swal.fire({
                     title: 'Success!',
                     text: 'Offer removed successfully!',
                     icon: 'success',
                     confirmButtonText: 'OK'
                 }).then(() => {
                     loadProducts(); // Reload products to update the button states
                 });
             },
             error: function (error) {
                 console.error("Error removing offer:", error);
             }
         });
     }
 </script>
    
