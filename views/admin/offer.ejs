    <!-- load modal -->
     <script>
        $(document).ready(function() {
    $('.apply-offer-btn').on('click', function() {
        const offerId = $(this).data('offer-id');

        // Open the modal
        $('#applyOfferModal').modal('show');

        // Fetch products from backend and display them in the modal
        $.ajax({
            url: '/admin/get-products',
            method: 'GET',
            success: function(data) {
                let productListHtml = '<ul class="list-group">';
                data.products.forEach(product => {
                    productListHtml += `
                        <li class="list-group-item d-flex align-items-center">
                            <img src="${product.imageUrl}" alt="${product.name}" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px;">
                            <input type="checkbox" class="product-checkbox" value="${product._id}" />
                            ${product.name}
                        </li>
                    `;
                });
                productListHtml += '</ul>';

                $('#productList').html(productListHtml);
            },
            error: function(error) {
                console.error('Error fetching products:', error);
                $('#productList').html('<p>Error loading products. Please try again.</p>');
            }
        });
    });

    // Handle the Apply Offer button click inside the modal
    $('#applyOfferBtn').on('click', function() {
        const selectedProducts = [];
        $('.product-checkbox:checked').each(function() {
            selectedProducts.push($(this).val());
        });

        // Now, send the selected products and offer ID to the server to apply the offer
        $.ajax({
            url: '/admin/apply-offer',
            method: 'POST',
            data: {
                offerId: offerId,
                products: selectedProducts
            },
            success: function(response) {
                alert('Offer applied successfully!');
                $('#applyOfferModal').modal('hide');
            },
            error: function(error) {
                console.error('Error applying offer:', error);
                alert('Error applying offer. Please try again.');
            }
        });
    });
});

     </script>
    
