 <script>
    let selectedOfferId = null;
let selectedOfferType = null;

$('#applyOfferModal').on('show.bs.modal', function (event) {
    let button = $(event.relatedTarget);
    selectedOfferId = button.data('offer-id');
    selectedOfferType = button.data('offer-type');

    if (selectedOfferType === 'Product') {
        loadProducts();
    } else if (selectedOfferType === 'Category') {
        loadCategories();
    }
});

function loadProducts() {
    $.ajax({
        url: '/admin/offers/products', // Adjust route as needed
        type: 'GET',
        success: function (products) {
            let productHTML = '';
            products.forEach(product => {
                productHTML += `
                    <div class="col-md-4 mb-4">
                        <div class="card card-product-grid">
                            <a href="#" class="img-wrap">
                                <img src="/${product.image[0].replace(/\\/g, '/')}" alt="Product">
                            </a>
                            <div class="info-wrap">
                                <p class="title">${product.name}</p>
                                <div class="price mt-1">₹${product.price}</div>
                                <div class="d-flex px-5 justify-content-between mt-2">
                                    ${product.offer ? 
                                        `<a class="btn btn-sm btn-danger rounded" onclick="removeOffer('${product._id}')">Remove Offer</a>` :
                                        `<a class="btn btn-sm btn-brand rounded" onclick="applyOffer('${product._id}')">Apply Offer</a>`}
                                </div>
                            </div>
                        </div> <!-- card-product end// -->
                    </div> <!-- col end// -->
                `;
            });
            $('#product-list').html(productHTML);
        },
        error: function (error) {
            console.error("Error loading products:", error);
        }
    });
}

function loadCategories() {
    $.ajax({
        url: '/admin/offers/categories', // Adjust route as needed
        type: 'GET',
        success: function (categories) {
            let categoryHTML = '';
            categories.forEach(category => {
                categoryHTML += `
                    <div class="col-md-4 mb-4">
                        <div class="card card-category-grid">
                            <div class="info-wrap">
                                <p class="title">${category.name}</p>
                                <div class="d-flex px-5 justify-content-between mt-2">
                                    ${category.offer ? 
                                        `<a class="btn btn-sm btn-danger rounded" onclick="removeCategoryOffer('${category._id}')">Remove Offer</a>` :
                                        `<a class="btn btn-sm btn-brand rounded" onclick="applyCategoryOffer('${category._id}')">Apply Offer</a>`}
                                </div>
                            </div>
                        </div> <!-- card-category end// -->
                    </div> <!-- col end// -->
                `;
            });
            $('#product-list').html(categoryHTML);
        },
        error: function (error) {
            console.error("Error loading categories:", error);
        }
    });
}

function applyOffer(productId) {
    $.ajax({
        url: '/admin/products-offer-apply',
        type: 'POST',
        data: { productId, offerId: selectedOfferId },
        success: function(response) {
            Swal.fire({
                title: 'Success',
                text: response.message,
                icon: 'success'
            }).then(() => {
                loadProducts(); // Reload products to update the button states
            });
        },
        error: function(xhr, status, error) {
            console.error('Error applying offer:', xhr);
            Swal.fire({
                title: 'Error',
                text: xhr.responseJSON ? xhr.responseJSON.message : 'Failed to apply offer',
                icon: 'error'
            });
        }
    });
}

function applyCategoryOffer(categoryId) {
    $.ajax({
        url: '/admin/categories-offer-apply',
        type: 'PUT',
        data: { categoryId, offerId: selectedOfferId },
        success: function(response) {
            Swal.fire({
                title: 'Success',
                text: response.message,
                icon: 'success'
            }).then(() => {
                loadCategories(); // Reload categories to update the button states
            });
        },
        error: function(xhr, status, error) {
            console.error('Error applying offer:', xhr);
            Swal.fire({
                title: 'Error',
                text: xhr.responseJSON ? xhr.responseJSON.message : 'Failed to apply offer',
                icon: 'error'
            });
        }
    });
}


function removeOffer(productId) {
    // Show confirmation dialog first
    Swal.fire({
        title: 'Are you sure?',
        text: 'Do you want to remove this offer?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, remove it!',
        cancelButtonText: 'Cancel'
    }).then((result) => {
        if (result.isConfirmed) {
            // Proceed with the removal if confirmed
            $.ajax({
                url: '/admin/offers/products/remove',
                type: 'DELETE',
                data: JSON.stringify({ productId: productId }),
                contentType: 'application/json',
                success: function (response) {
                    Swal.fire({
                        title: 'Success!',
                        text: 'Offer removed successfully!',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    }).then(() => {
                        loadProducts(); // Reload products to update the button states
                    });
                },
                error: function (error) {
                    console.error("Error removing offer:", error);
                    Swal.fire({
                        title: 'Error!',
                        text: 'Failed to remove offer. Please try again.',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                }
            });
        }
    });
}



function removeCategoryOffer(categoryId) {
    $.ajax({
        url: '/admin/offers/categories/remove',
        type: 'DELETE',
        data: { categoryId: categoryId },
        success: function (response) {
            Swal.fire({
                title: 'Success!',
                text: 'Offer removed successfully!',
                icon: 'success',
                confirmButtonText: 'OK'
            }).then(() => {
                loadCategories(); // Reload categories to update the button states
            });
        },
        error: function (error) {
            console.error("Error removing offer:", error);
        }
    });
}
function deleteOffer(offerId) {
    Swal.fire({
        title: 'Are you sure?',
        text: "Do you really want to delete this offer? This action cannot be undone!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!',
        cancelButtonText: 'No, cancel'
    }).then((result) => {
        if (result.isConfirmed) {
            $.ajax({
                url: `/admin/offers/delete/${offerId}`, // Use template literal to pass the offerId
                type: 'DELETE',
                success: function (response) {
                    Swal.fire({
                        title: 'Deleted!',
                        text: 'Offer Deleted successfully!',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    }).then(() => {
                        window.location.reload(); // Reload categories to update the button states
                    });
                },
                error: function (error) {
                    console.error("Error Deleting offer:", error);
                }
            });
        }
    });
}

