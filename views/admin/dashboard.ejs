// Validate Start Date
function validate_start_date() {
    const startDate = document.getElementById('startDate').value;
    const currentDate = new Date().toISOString().split('T')[0]; // Current date in YYYY-MM-DD format
    const errorStartDate = document.getElementById('error-startDate');
    
    if (startDate === "") {
        errorStartDate.textContent = "Please enter a valid start date.";
        return false;
    } else if (startDate > currentDate) {
        errorStartDate.textContent = "Start date cannot be in the Future.";
        return false;
    } else {
        errorStartDate.textContent = "";
        return true;
    }
}

// Validate End Date
function validate_end_date() {
    const endDate = document.getElementById('endDate').value;
    const startDate = document.getElementById('startDate').value;
    const errorEndDate = document.getElementById('error-endDate');
    
    if (endDate === "") {
        errorEndDate.textContent = "Please enter a valid end date.";
        return false;
    } else if (endDate < startDate) {
        errorEndDate.textContent = "End date cannot be before start date.";
        return false;
    } else {
        errorEndDate.textContent = "";
        return true;
    }
}

