  // Function to Prepare Data for Chart.js
  function prepareChartData(data, type) {
      let labels = [];
      let sales = [];

      if (type === 'year') {
          data.forEach(item => {
              labels.push(`${item._id.month}/${item._id.year}`);
              sales.push(item.totalSales);
          });
      } else {
          data.forEach(item => {
              labels.push(`${item._id.day}/${item._id.month}/${item._id.year}`);
              sales.push(item.totalSales);
          });
      }

      return { labels, sales };
  }

