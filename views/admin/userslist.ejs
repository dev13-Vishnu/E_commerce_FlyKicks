<body>
    <div class="screen-overlay"></div>
    <%-include('./layouts/sidemenu.ejs') %>
    <main class="main-wrap">
        <%-include('./layouts/navbar.ejs')%>
        <section class="content-main">
            <div class="content-header">
                <h2 class="content-title">Users list</h2>
                <div>
                    <a href="#" class="btn btn-primary"><i class="material-icons md-plus"></i> Create new</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <input type="text" placeholder="Search..." class="form-control">
                        </div>
                        <div class="col-lg-2 col-md-3 col-6">
                            <select class="form-select">
                                <option>Status</option>
                                <option>Active</option>
                                <option>Disabled</option>
                                <option>Show all</option>
                            </select>
                        </div>
                        <div class="col-lg-2 col-md-3 col-6">
                            <select class="form-select">
                                <option>Show 20</option>
                                <option>Show 30</option>
                                <option>Show 40</option>
                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Seller</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Registered</th>
                                    <th class="text-end"> Action </th>
                                </tr>
                            </thead>
                            <tbody>

                                 <%users.forEach(user =>{%>
                                <tr>
                                    <td width="40%">
                                        <a href="#" class="itemside">
                                            <div class="left">
                                                <img src="assets/imgs/people/avatar1.jpg" class="img-sm img-avatar" alt="Userpic">
                                            </div>
                                            <div class="info pl-3">
                                                <h6 class="mb-0 title"><%=user.username%></h6>
                                                <!-- <small class="text-muted">Seller ID: #439</small> -->
                                            </div>
                                        </a>
                                    </td>
                                    <td><%=user.email%></td>
                                    <% if(user.isBlocked) {%>

                                    <td><span class="badge rounded-pill alert-danger">Blocked</span></td>
                                    <%}else{%>
                                    <td><span class="badge rounded-pill alert-success">Active</span></td>
                                    <%}%>
                                    <td><%= user.date.toLocaleDateString('en-US', { day: '2-digit', month: 'short', year: 'numeric' }) %>
                                    </td>
                                    <td class="text-end">
                                        <% if(user.isBlocked){ %>
                                        <a href="/admin/user/unblock?id=<%= user._id %>" class="btn btn-sm  rounded font-sm mt-15 btn-success">UnBlock</a>
                                            <% }else{ %>
                                        <a href="/admin/user/block?id=<%= user._id %>" class="btn btn-sm btn-danger rounded font-sm mt-15">Block</a>
                                        <% } %>
                                    </td>
                                </tr>
                                <%})%>

                            </tbody>
                        </table> <!-- table-responsive.// -->
                    </div>
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
