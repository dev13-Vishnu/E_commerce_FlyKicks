    <!-- add categories -->
<script>
    document.getElementById('category_submit').addEventListener('click', async function (e) {
        e.preventDefault();

        const categoryName = document.getElementById('category_name').value;
        const categoryAction = document.getElementById('category_action').value;
        const categoryDescription = document.getElementById('category_description').value;

        try {
            const response = await fetch('/admin/categories', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    category_name: categoryName,
                    category_action: categoryAction,
                    category_description: categoryDescription
                }),
            });

            const result = await response.json();

            if (result.success) {
    // Success Alert
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: result.message,
                    showConfirmButton: false,
                    timer: 1500
                });

                // Append the new category to the table
                const tbody = document.querySelector('table tbody');
                const newRow = document.createElement('tr');
                newRow.innerHTML = `
                    <td>New</td>
                    <td><b>${categoryName}</b></td>
                    <td>${categoryDescription}</td>
                    <td>${categoryAction}</td>
                    <td class="text-center">
                        <div class="dropdown">
                            <a href="#" data-bs-toggle="dropdown" class="btn btn-light rounded btn-sm font-sm">
                                <i class="material-icons md-more_horiz"></i>
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="edit-category?id=new">Edit info</a>
                                <a class="dropdown-item text-danger" href="delete-category?id=new">Delete</a>
                            </div>
                        </div>
                    </td>
                `;
                tbody.appendChild(newRow);
                // Example: Append the new category to the table
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: result.message,
                });
            }
        } catch (error) {
            console.error('Error:', error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'An error occurred. Please try again.',
            });
        }
    });
</script>

<!-- delete category -->
<script>
    async function confirmDelete(categoryId) {
        const result = await Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        });

        if (result.isConfirmed) {
            try {
                const response = await fetch(`/admin/delete-category`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id: categoryId }),
                });

                const data = await response.json();

                if (data.success) {
                    Swal.fire(
                        'Deleted!',
                        'Category has been deleted.',
                        'success'
                    );
                    // Optionally, remove the row from the table without reloading the page
                    document.querySelector(`#category-${categoryId}`).remove();
                } else {
                    Swal.fire(
                        'Error!',
                        'There was a problem deleting the category.',
                        'error'
                    );
                }
            } catch (error) {
                Swal.fire(
                    'Error!',
                    'There was a problem deleting the category.',
                    'error'
                );
            }
        }
    }
</script>

    // Add category back
<script>
async function confirmAdd(categoryId, categoryName) {
    const result = await Swal.fire({
        title: `Add category "${categoryName}" back?`,
        text: "This category will be reactivated.",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, add it!'
    });

    if (result.isConfirmed) {
        try {
            const response = await fetch(`/admin/add-category`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ id: categoryId }),
            });

            const data = await response.json();

            if (data.success) {
                Swal.fire(
                    'Added!',
                    `Category "${categoryName}" has been added back.`,
                    'success'
                );
                // Optionally, update the button to "Delete" without reloading the page
                document.querySelector(`#category-${categoryId} .dropdown-menu`).innerHTML = `
                    <a class="dropdown-item text-danger" onclick="confirmDelete('${categoryId}')">Delete</a>
                `;
            } else {
                Swal.fire(
                    'Error!',
                    'There was a problem adding the category back.',
                    'error'
                );
            }
        } catch (error) {
            Swal.fire(
                'Error!',
                'There was a problem adding the category back.',
                'error'
            );
        }
    }
}

</script>

